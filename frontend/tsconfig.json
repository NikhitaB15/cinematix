{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"]
      },
      "lib": ["DOM", "DOM.Iterable", "ESNext"],
      "skipLibCheck": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "strict": true,
      "jsx": "preserve",
      "types": ["vite/client"]
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }